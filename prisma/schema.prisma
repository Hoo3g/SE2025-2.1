datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  passwordHash    String
  emailVerifiedAt DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  emailTokens EmailToken[] @relation("UserEmailTokens")
}

model EmailToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  purpose   String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation("UserEmailTokens", fields: [userId], references: [id], onDelete: Cascade)
}
