# Production Environment Configuration
# Copy this file to .env and update the values

NODE_ENV=production

# IMPORTANT: Change this to your server's public URL/IP
APP_URL=http://136.114.70.164
BASE_URL=http://136.114.70.164your-server-domain.com

# Database - keep localhost if MySQL runs in Docker on same server
DATABASE_URL="mysql://root@localhost:3306/asset3d_db"

# SMTP Email Settings (Gmail with App Password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
