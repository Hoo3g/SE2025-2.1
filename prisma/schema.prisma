// prisma/schema.prisma
datasource db {
  provider = "mysql" // hoặc postgresql nếu bạn dùng Postgres
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

////////////////////////////////////////////////////////
// ENUMS
////////////////////////////////////////////////////////

enum UserRole {
  ADMIN
  USER
}

enum UserStatus {
  ACTIVE
  NOT_ACTIVE
}

enum TokenType {
  access_token
  refresh_token
  authorization_code
  id_token
}

////////////////////////////////////////////////////////
// MODELS
////////////////////////////////////////////////////////

model User {
  id_user       Int       @id @default(autoincrement())
  last_name     String    @db.VarChar(50)
  first_name    String    @db.VarChar(50)
  email         String    @unique @db.VarChar(100)
  phone_number  String    @db.VarChar(10)
  role          UserRole
  avatar        String?   @db.Text
  status        UserStatus
  password      String    @db.VarChar(255)

  // Relations
  changePasswords   ChangePassword[]
  verifyEmail       VerifyEmail?
  clients           Client[]
  tokens            Token[]
  logs              Log[]

  @@map("users")
}

////////////////////////////////////////////////////////

model ChangePassword {
  id_change_password Int       @id @default(autoincrement())
  id_user            Int
  reset_password_token String  @db.VarChar(255)
  token_lifetime       DateTime

  // Relations
  user User @relation(fields: [id_user], references: [id_user])

  @@map("change_password")
}

////////////////////////////////////////////////////////

model VerifyEmail {
  id_verification_email Int       @id @default(autoincrement())
  id_user               Int       @unique
  verified_email        Boolean
  token_email           String    @db.VarChar(255)
  token_lifetime        DateTime

  // Relations
  user User @relation(fields: [id_user], references: [id_user])

  @@map("verify_emails")
}

////////////////////////////////////////////////////////

model Client {
  id_client        Int       @id @default(autoincrement())
  client_id        String    @unique @db.VarChar(100)
  client_secret    String    @db.VarChar(255)
  redirect_uris    String    @db.Text
  grant_types      String    @db.VarChar(255)
  response_types   String    @db.VarChar(100)
  scope            String    @db.VarChar(255)
  token_endpoint   String    @db.VarChar(50)
  id_user          Int?
  created_at       DateTime  @default(now())
  updated_at       DateTime  @updatedAt

  // Relations
  user   User?     @relation(fields: [id_user], references: [id_user])
  tokens Token[]
  logs   Log[]

  @@map("clients")
}

////////////////////////////////////////////////////////

model Token {
  id_token     Int        @id @default(autoincrement())
  type         TokenType
  user_id      Int
  client_id    Int
  scope        String     @db.VarChar(255)
  expires_at   DateTime
  is_revoked   Boolean    @default(false)
  created_at   DateTime   @default(now())
  token_value  String     @db.VarChar(255)

  // Relations
  user   User   @relation(fields: [user_id], references: [id_user])
  client Client @relation(fields: [client_id], references: [id_client])

  @@map("tokens")
}

////////////////////////////////////////////////////////

model Log {
  id_log     Int      @id @default(autoincrement())
  user_id    Int
  client_id  Int
  action     String   @db.VarChar(50)
  created_at DateTime @default(now())

  // Relations
  user   User   @relation(fields: [user_id], references: [id_user])
  client Client @relation(fields: [client_id], references: [id_client])

  @@map("logs")
}
